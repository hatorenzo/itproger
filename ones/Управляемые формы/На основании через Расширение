// 1) Добавить в расширении кнопку
	
&НаСервере
Процедура УУАЗ_ДобавлениеКнопки_ПоступлениеТоваровНаСклад_НеотфактурованнаяПоставка()

	НовКоманда = ЭтотОбъект.Команды.Добавить("УУАЗ_КомандаПоступлениеТоваровНаСклад_НеотфактурованнаяПоставка");
	НовКоманда.Действие = "УУАЗ_КомандаПоступлениеТоваровНаСклад_НеотфактурованнаяПоставка";
	НовКоманда.Заголовок = "Поступление товаров на склад(Не отфактурованная поставка)";
	НовКнопка = Элементы.Добавить("УУАЗ_КомандаПоступлениеТоваровНаСклад_НеотфактурованнаяПоставка", Тип("КнопкаФормы"), Элементы.ПодменюСоздатьНаОснованииОбычное);	
	НовКнопка.ИмяКоманды = "УУАЗ_КомандаПоступлениеТоваровНаСклад_НеотфактурованнаяПоставка";	

КонецПроцедуры
&НаКлиенте
Процедура УУАЗ_КомандаСоздатьНаОснованииКорректировкуНазначенияТоваров()

	ПараметрыЗаполнения = Новый Структура;
	ПараметрыЗаполнения.Вставить("УУАЗ_ЗаказПоставщику", Объект.Ссылка);
	ПараметрыФормы = Новый Структура("ЗначенияЗаполнения", ПараметрыЗаполнения);
	
	фНовыйДокумент = ПолучитьФорму("Документ.ПоступлениеТоваровНаСклад.Форма.ФормаДокумента", ПараметрыФормы, ЭтотОбъект);
	фНовыйДокумент.Открыть();

КонецПроцедуры

