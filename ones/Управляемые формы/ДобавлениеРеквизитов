	//Группа в командную панель
	НовГруппа = Элементы.Добавить("УУАЗ_ТоварыДействияССериями", Тип("ГруппаФормы"), Элементы.Товары.КоманднаяПанель);
    НовГруппа.Заголовок = "Действия с сериями";
	
